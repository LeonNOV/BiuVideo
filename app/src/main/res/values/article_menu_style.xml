<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="ArticleStyle" parent="AppTheme.NoActionBar">
        <item name="android:popupMenuStyle">@style/ArticlePopMenuStyle</item>
        <item name="android:dropDownListViewStyle">@style/ArticlePopMenuDivier</item>
        <item name="android:textAppearanceSmallPopupMenu">@style/ArticlePopMeuText</item>
        <item name="android:textAppearanceLargePopupMenu">@style/ArticlePopMeuText</item>

<!--        <item name="android:windowActionBar">false</item>-->
<!--        <item name="android:windowNoTitle">true</item>-->
    </style>

    <!--popMenu的Style-->
    <style name="ArticlePopMenuStyle" parent="@android:style/Widget.PopupMenu">
        <item name="android:popupBackground">#fff</item><!-- popMenu的背景色-->
    </style>

    <!--popmenu的字体颜色-->
    <style name="ArticlePopMeuText">
        <item name="android:textColor">#000</item>
        <item name="android:textSize">13sp</item>
        <item name="android:gravity">center</item>
    </style>

    <!--popMenu分割线的颜色-->
    <style name="ArticlePopMenuDivier">
    <item name="android:divider">#000</item>
    <item name="android:dividerHeight">1sp</item>
    </style>

</resources>