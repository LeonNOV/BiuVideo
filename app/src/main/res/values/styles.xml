<resources xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <!-- dialog动画 -->
    <style name="music_list_dialog">
        <!-- 进入时的动画 -->
        <item name="android:windowEnterAnimation">@anim/music_play_list_scale_enter</item>

        <!-- 退出时动画 -->
        <item name="android:windowExitAnimation">@anim/music_play_list_scale_exit</item>
    </style>

    <!-- PictureViewer动画 -->
    <style name="picture_viewer_anim_style">
        <!-- 进入 -->
        <item name="android:windowEnterAnimation">@anim/picture_viewer_enter</item>

        <!-- 退出 -->
        <item name="android:windowExitAnimation">@anim/picture_viewer_exit</item>
    </style>

    <style name="home_fragment_spinner">
        <item name="android:textColor">#393939</item>
    </style>

    <style name="set_hero_dialog_spinner">
        <item name="android:textColor">@color/normal</item>
    </style>

    <style name="CustomRadioTheme" parent="@android:style/Widget.CompoundButton.CheckBox">
        <item name="android:button">@drawable/radio_button</item>
    </style>

</resources>