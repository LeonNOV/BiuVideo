<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@color/gray"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/video_controller_back"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:padding="6dp"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:src="@drawable/ic_back"
            app:tint="@color/white"
            android:contentDescription="@string/description" />

        <TextView
            android:id="@+id/video_controller_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:textSize="20sp"
            android:layout_marginStart="15dp"
            android:text="TitleTitleTitleTitleTitleTitleTitle"/>

    </LinearLayout>

    <ImageView
        android:id="@+id/video_controller_lock"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical|end"
        android:background="?attr/selectableItemBackgroundBorderless"
        android:contentDescription="@string/description"
        android:padding="6dp"
        android:src="@drawable/video_lock_status" />
    
    <ProgressBar
        android:id="@+id/video_controller_loading"
        android:layout_width="@dimen/dkplayer_play_btn_size"
        android:layout_height="@dimen/dkplayer_play_btn_size"
        android:layout_gravity="center"
        android:indeterminateDuration="2000"
        android:indeterminateTint="@color/blue"
        android:visibility="gone"
        tools:visibility="visible" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/video_controller_currentProgress"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="01:03"
                android:textColor="@color/white"
                android:textSize="17sp" />

            <SeekBar
                android:id="@+id/video_controller_seekBar"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                style="@style/VideoSeekBarStyle"
                android:progress="50"
                android:layout_weight="1" />

            <TextView
                android:id="@+id/video_controller_totalProgress"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="10:23"
                android:textColor="@color/white"
                android:textSize="17sp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:layout_gravity="bottom"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/video_controller_control"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/video_pause"
                android:contentDescription="@string/description" />

            <ImageView
                android:id="@+id/video_controller_danmaku_control"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:src="@drawable/video_danmaku_close"
                android:contentDescription="@string/description" />

            <EditText
                android:id="@+id/video_controller_danmaku_editText"
                android:layout_weight="1"
                android:layout_width="0dp"
                style="@style/CustomEditText"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"
                android:background="@drawable/round_corners6dp_bg"
                android:backgroundTint="#4DB1B1B1"
                android:layout_height="30dp"
                android:inputType="text"/>

            <TextView
                android:id="@+id/video_controller_speed"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="20dp"
                android:textColor="@color/white"
                android:textSize="20sp"
                android:text="倍速"/>

            <TextView
                android:id="@+id/video_controller_quality"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:textSize="20sp"
                android:text="1080P"/>

        </LinearLayout>

    </LinearLayout>

</FrameLayout>