<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="10dp"
    android:background="#F48FAC"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/fragment_bangumi_detail_imageView_back"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="@drawable/ripple_bilibili_pink_lite"
            android:padding="10dp"
            android:src="@drawable/icon_back"/>

        <LinearLayout
            android:layout_marginTop="5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <androidx.cardview.widget.CardView
                android:layout_width="88dp"
                android:layout_height="114dp"
                app:cardCornerRadius="@dimen/corner_6dp">

                <ImageView
                    android:id="@+id/fragment_bangumi_detail_imageView_cover"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="centerCrop"
                    android:src="@drawable/ic_launcher_background" />

            </androidx.cardview.widget.CardView>

            <LinearLayout
                android:layout_width="170dp"
                android:layout_height="114dp"
                android:layout_marginStart="5dp"
                android:layout_marginEnd="5dp"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/fragment_bangumi_detail_textView_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:maxLines="2"
                    android:textStyle="bold"
                    android:text="TitleTitleTitleTitleTitleTitleTitleTitleTitleTitleTitleTitleTitleTitle"
                    android:textColor="@color/black"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/fragment_bangumi_detail_textView_area"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="日本"
                    android:layout_marginTop="10dp"
                    android:textColor="@color/gray"
                    android:textSize="13sp" />

                <TextView
                    android:id="@+id/fragment_bangumi_detail_textView_pubTime"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:textColor="@color/gray"
                    android:textSize="13sp"
                    android:text="2020年7月5日开播"/>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/fragment_bangumi_detail_textView_bangumiState"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/gray"
                        android:textSize="13sp"
                        android:text="已完结"/>

                    <View
                        android:layout_width="0.5dp"
                        android:layout_height="match_parent"
                        android:layout_marginStart="@dimen/small_view_padding_5dp"
                        android:layout_marginEnd="@dimen/small_view_padding_5dp"
                        android:background="@color/gray" />

                    <TextView
                        android:id="@+id/fragment_bangumi_detail_textView_epSize"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/gray"
                        android:textSize="13sp"
                        android:text="全12话"/>
                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:layout_gravity="center_vertical"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/fragment_bangumi_detail_textView_score"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="9.1"
                        android:textStyle="bold"
                        android:textColor="@color/blue"
                        android:textSize="25sp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/bangumi_score"
                        android:textColor="@color/blue"
                        android:textSize="13sp" />

                </LinearLayout>

                <RatingBar
                    android:id="@+id/fragment_bangumi_detail_ratingBar"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    style="@style/Widget.AppCompat.RatingBar.Small"
                    android:numStars="5"
                    android:rating="0.0"
                    android:isIndicator="true"
                    android:stepSize="0.1"
                    android:progressTint="@color/blue" />

                <TextView
                    android:id="@+id/fragment_bangumi_detail_textView_reviews"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="5.2万人点评"
                    android:textSize="10sp"
                    android:textColor="@color/black" />

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/bangumi_originalName"
                android:textColor="@color/black"
                android:textSize="17sp"/>

            <TextView
                android:id="@+id/fragment_bangumi_detail_textView_originalName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:textColor="@color/gray"
                android:textSize="17sp"
                android:text="-"/>


        </LinearLayout>

        <LinearLayout
            android:layout_marginTop="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:textSize="17sp"
                android:text="@string/bangumi_otherInfo"/>

            <TextView
                android:id="@+id/fragment_bangumi_detail_textView_otherInfo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:textColor="@color/gray"
                android:textSize="17sp"
                android:text="-"/>

        </LinearLayout>

        <LinearLayout
            android:layout_marginTop="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/bangumi_desc"
                android:textColor="@color/black"
                android:textSize="17sp"/>

            <TextView
                android:id="@+id/fragment_bangumi_detail_textView_desc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/gray"
                android:layout_marginTop="10dp"
                android:textSize="17sp"
                android:text="-"/>

        </LinearLayout>

    </LinearLayout>

</ScrollView>