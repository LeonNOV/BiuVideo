<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/ripple_round_corners6dp_bg"
    android:orientation="horizontal">

    <androidx.cardview.widget.CardView
        android:layout_width="@dimen/videoCoverWidth"
        android:layout_height="@dimen/videoCoverHeight"
        app:cardCornerRadius="@dimen/videoCoverRadius"
        app:cardMaxElevation="0dp">

        <ImageView
            android:id="@+id/downloading_level_one_item_cover"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:contentDescription="@string/description"
            android:scaleType="centerCrop"
            tools:src="@drawable/user_default_banner" />

        <TextView
            android:id="@+id/downloading_level_one_item_anthology_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|end"
            android:layout_margin="6dp"
            android:background="@drawable/video_length_bg"
            android:gravity="center"
            android:padding="3dp"
            android:textColor="@color/white"
            android:textSize="13sp"
            tools:text="2P" />

    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/downloading_level_one_item_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ellipsize="end"
        android:layout_marginStart="10dp"
        android:maxLines="2"
        android:textColor="@color/black"
        android:textSize="15sp"
        tools:text="阿瓦达瓦达瓦达瓦达瓦阿瓦达瓦达瓦达瓦达瓦阿瓦达瓦达瓦达瓦达瓦阿瓦达瓦达瓦达瓦达瓦" />

</LinearLayout>