<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/music_relativeLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fff"
    android:orientation="vertical"
    tools:context=".ui.activitys.UpSongActivity">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/music_toolBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/transparent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/music_imageView_back"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true"
                android:background="@drawable/ripple_image_view_pressed"
                android:padding="5dp"
                android:src="@drawable/icon_back" />

            <ImageView
                android:id="@+id/music_imageView_musicList"
                android:layout_width="45dp"
                android:layout_height="45dp"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:layout_marginEnd="20dp"
                android:background="@drawable/ripple_image_view_pressed"
                android:padding="5dp"
                android:src="@drawable/music_icon_playlist" />

        </RelativeLayout>

    </androidx.appcompat.widget.Toolbar>

    <TextView
        android:id="@+id/music_textView_musicName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/music_toolBar"
        android:layout_centerHorizontal="true"
        android:gravity="center"
        android:text="MusicName"
        android:textColor="@color/normal"
        android:textSize="17sp"
        android:textStyle="bold" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/music_textView_musicName"
        android:gravity="center"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/music_textView_author"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:text="Author"
            android:textColor="@color/normal" />

        <ImageView
            android:layout_width="18dp"
            android:layout_height="18dp"
            android:layout_marginTop="6dp"
            android:src="@drawable/icon_enter" />

    </LinearLayout>

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/music_circleImageView_cover"
        android:layout_width="240dp"
        android:layout_height="240dp"
        android:layout_below="@id/music_toolBar"
        android:layout_centerInParent="true"
        android:layout_marginTop="160dp"
        android:src="@drawable/ic_launcher_background"
        app:civ_border_color="#979797"
        app:civ_border_overlay="true"
        app:civ_border_width="2dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@id/music_constraintLayout_progress"
        android:layout_marginBottom="30dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/music_imageView_addFavorite"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:layout_weight="1"
            android:background="@drawable/ripple_button_rectangle"
            android:padding="5dp"
            android:src="@drawable/no_favorite" />

        <ImageView
            android:id="@+id/music_imageView_isHaveVideo"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:layout_weight="1"
            android:background="@drawable/ripple_button_rectangle"
            android:clickable="false"
            android:padding="5dp"
            android:src="@drawable/icon_video" />

        <ImageView
            android:id="@+id/music_imageView_link"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:layout_weight="1"
            android:background="@drawable/ripple_button_rectangle"
            android:padding="5dp"
            android:src="@drawable/icon_link" />

        <ImageView
            android:id="@+id/music_imageView_download"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:layout_weight="1"
            android:background="@drawable/ripple_button_rectangle"
            android:padding="5dp"
            android:src="@drawable/icon_download_music" />

    </LinearLayout>

    <RelativeLayout
        android:id="@+id/music_constraintLayout_progress"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@id/music_linearLayout_control"
        android:gravity="center"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/music_textView_nowProgress"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/music_seekBar"
            android:layout_marginStart="30dp"
            android:layout_marginTop="5dp"
            android:text="01:23"
            android:textColor="#515151" />

        <SeekBar
            android:id="@+id/music_seekBar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:maxHeight="4.3dp"
            android:minHeight="4.0dp"
            android:progressDrawable="@drawable/seekbar_bar"
            android:thumb="@drawable/icon_circle" />

        <TextView
            android:id="@+id/music_textView_length"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/music_seekBar"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="5dp"
            android:layout_marginEnd="30dp"
            android:text="03:45"
            android:textColor="#515151" />

    </RelativeLayout>

    <LinearLayout
        android:id="@+id/music_linearLayout_control"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginTop="30dp"
        android:layout_marginBottom="30dp"
        android:gravity="center"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/music_imageView_up"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginEnd="30dp"
            android:background="@drawable/ripple_image_view_pressed"
            android:src="@drawable/music_icon_up" />

        <ImageView
            android:id="@+id/music_imageView_control"
            android:layout_width="55dp"
            android:layout_height="55dp"
            android:background="@drawable/ripple_image_view_pressed"
            android:src="@drawable/music_icon_pause" />

        <ImageView
            android:id="@+id/music_imageView_next"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginStart="30dp"
            android:background="@drawable/ripple_image_view_pressed"
            android:src="@drawable/music_icon_next" />

    </LinearLayout>

</RelativeLayout>