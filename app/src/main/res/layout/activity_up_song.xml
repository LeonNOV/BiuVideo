<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    android:orientation="vertical"
    tools:context=".ui.activitys.UpSongActivity">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/music_toolBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/noneColor">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/music_imageView_back"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true"
                android:background="@drawable/ripple_image_view_pressed"
                android:src="@drawable/icon_back" />

            <com.sunfusheng.marqueeview.MarqueeView
                android:id="@+id/music_marqueeView"
                android:layout_width="90dp"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toEndOf="@id/music_imageView_back"
                app:mvAnimDuration="3000"
                app:mvDirection="right_to_left"
                app:mvInterval="3000"
                app:mvSingleLine="false"
                app:mvTextColor="#4E4E4E"
                app:mvTextSize="14sp" />

            <ImageView
                android:id="@+id/music_imageView_isHaveVideo"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_centerVertical="true"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"
                android:layout_toEndOf="@id/music_marqueeView"
                android:background="@drawable/ripple_image_view_pressed"
                android:src="@drawable/icon_video"
                android:visibility="invisible" />

            <ImageView
                android:id="@+id/music_imageView_musicList"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:layout_marginEnd="30dp"
                android:background="@drawable/ripple_image_view_pressed"
                android:src="@drawable/music_icon_playlist" />

        </RelativeLayout>

    </androidx.appcompat.widget.Toolbar>

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/music_circleImageView_cover"
        android:layout_width="240dp"
        android:layout_height="240dp"
        android:layout_below="@id/music_toolBar"
        android:layout_centerInParent="true"
        android:layout_marginTop="100dp"
        android:src="@drawable/ic_launcher_background"
        app:civ_border_color="#979797"
        app:civ_border_overlay="true"
        app:civ_border_width="2dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@id/music_constraintLayout_progress"
        android:layout_marginBottom="30dp"
        android:gravity="center"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/music_imageView_addFavorite"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_marginBottom="10dp"
            android:background="@drawable/ripple_image_view_pressed"
            android:src="@drawable/no_favorite" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="30dp"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/icon_music_play" />

            <TextView
                android:id="@+id/music_imageView_play"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:text="1234"
                android:textColor="#707070" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="30dp"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/icon_coin" />

            <TextView
                android:id="@+id/music_imageView_coin"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:text="123"
                android:textColor="#707070" />

        </LinearLayout>


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="30dp"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/icon_comment" />

            <TextView
                android:id="@+id/music_imageView_comment"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:text="4561"
                android:textColor="#707070" />

        </LinearLayout>

        <ImageView
            android:id="@+id/music_imageView_link"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="30dp"
            android:layout_marginBottom="10dp"
            android:src="@drawable/icon_link" />

        <ImageView
            android:id="@+id/music_imageView_download"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_marginStart="30dp"
            android:layout_marginBottom="10dp"
            android:background="@drawable/ripple_image_view_pressed"
            android:src="@drawable/icon_download" />

    </LinearLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/music_constraintLayout_progress"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@id/music_linearLayout_control"
        android:gravity="center"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/music_textView_nowProgress"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:text="01:23"
            android:textColor="#515151"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/music_seekBar"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <SeekBar
            android:id="@+id/music_seekBar"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:maxHeight="3.0dp"
            android:minHeight="3.0dp"
            android:progressDrawable="@drawable/seekbar_bar"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="@id/music_textView_nowProgress"
            app:layout_constraintStart_toStartOf="@id/music_textView_length" />

        <TextView
            android:id="@+id/music_textView_length"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="8dp"
            android:text="03:45"
            android:textColor="#515151"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/music_seekBar"
            app:layout_constraintTop_toTopOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <LinearLayout
        android:id="@+id/music_linearLayout_control"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginTop="30dp"
        android:layout_marginBottom="30dp"
        android:gravity="center"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/music_imageView_up"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginEnd="30dp"
            android:background="@drawable/ripple_image_view_pressed"
            android:src="@drawable/music_icon_up" />

        <ImageView
            android:id="@+id/music_imageView_control"
            android:layout_width="55dp"
            android:layout_height="55dp"
            android:background="@drawable/ripple_image_view_pressed"
            android:src="@drawable/music_icon_pause" />

        <ImageView
            android:id="@+id/music_imageView_next"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginStart="30dp"
            android:background="@drawable/ripple_image_view_pressed"
            android:src="@drawable/music_icon_next" />

    </LinearLayout>

</RelativeLayout>