<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="245dp"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:background="@drawable/round_corners6dp_bg"
    android:backgroundTint="@color/bg"
    android:elevation="5dp"
    android:orientation="vertical"
    android:padding="@dimen/cardPadding">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:orientation="vertical">

        <TextView
            android:id="@+id/warn_dialog_textView_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textColor="@color/black"
            android:textSize="17sp"
            android:textStyle="bold"
            tools:text="Title" />

        <TextView
            android:id="@+id/warn_dialog_textView_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:gravity="start"
            android:textColor="@color/black"
            tools:text="ContentContentContentContentContentContentContentContentContentContentContent" />

    </LinearLayout>


    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:gravity="center"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/warn_dialog_textView_cancel"
            android:layout_width="52dp"
            android:layout_height="52dp"
            android:layout_marginStart="20dp"
            android:background="@drawable/circle_ripple_bg"
            android:backgroundTint="@color/warn_dialog_cancel_color"
            android:contentDescription="@string/description"
            android:gravity="center"
            android:scaleType="center"
            android:src="@drawable/ic_cancel" />

        <ImageView
            android:id="@+id/warn_dialog_textView_confirm"
            android:layout_width="52dp"
            android:layout_height="52dp"
            android:layout_gravity="end"
            android:layout_marginEnd="20dp"
            android:background="@drawable/circle_ripple_bg"
            android:backgroundTint="@color/warn_dialog_confirm_color"
            android:contentDescription="@string/description"
            android:gravity="center"
            android:scaleType="center"
            android:src="@drawable/ic_check" />

    </FrameLayout>

</LinearLayout>