<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="10dp"
    android:background="@drawable/ripple_round_corners6dp_bg"
    android:orientation="vertical">

    <TextView
        android:id="@+id/bili_user_article_item_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="top"
        android:ellipsize="end"
        android:maxLines="2"
        android:padding="10dp"
        android:text="TitleTitleTitleTitleTitleTitleTitleTitleTitleTitleTitleTitleTitleTitleTitleTitleTitleTitleTitleTitle"
        android:textColor="@color/black"
        android:textSize="15sp" />

    <ImageView
        android:id="@+id/bili_user_article_item_cover"
        android:layout_width="match_parent"
        android:layout_height="127dp"
        android:layout_marginTop="10dp"
        android:contentDescription="@string/description"
        android:scaleType="centerCrop"
        android:src="@color/gray" />

    <TextView
        android:id="@+id/bili_user_article_item_summary"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:ellipsize="end"
        android:maxLines="2"
        android:text="SummarySummarySummarySummarySummarySummarySummarySummarySummarySummarySummarySummarySummarySummarySummarySummarySummarySummarySummarySummarySummarySummarySummarySummarySummarySummarySummarySummarySummarySummarySummarySummarySummarySummary"
        android:textColor="@color/infoColor"
        android:textSize="13sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:layout_marginTop="10dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/bili_user_article_item_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:drawablePadding="5dp"
            android:textColor="@color/infoColor"
            android:textSize="13sp"
            app:drawableStartCompat="@drawable/ic_view" />

        <TextView
            android:id="@+id/bili_user_article_item_like"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:layout_marginStart="10dp"
            android:drawablePadding="5dp"
            android:textColor="@color/infoColor"
            android:textSize="13sp"
            app:drawableStartCompat="@drawable/ic_like_status" />

        <TextView
            android:id="@+id/bili_user_article_item_comment"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:gravity="center_vertical"
            android:drawablePadding="5dp"
            android:text="1234"
            android:textColor="@color/infoColor"
            android:textSize="13sp"
            app:drawableStartCompat="@drawable/ic_comment" />

    </LinearLayout>

</LinearLayout>