<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bottom_sheet_background"
    android:backgroundTint="@color/white"
    android:orientation="vertical"
    android:paddingStart="@dimen/cardPadding"
    android:paddingEnd="@dimen/cardPadding"
    android:paddingBottom="@dimen/cardPadding">

    <com.leon.biuvideo.ui.views.BottomSheetTopBar
        android:id="@+id/download_bottom_sheet_dialog_topBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:bottomSheetTitle="视频下载" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/downloadQualityWarn"
        android:textSize="13sp"
        android:textColor="@color/infoColor"
        android:layout_marginTop="20dp"
        android:layout_gravity="center_horizontal"/>

    <com.leon.biuvideo.ui.views.TagView
        android:id="@+id/download_bottom_sheet_dialog_quality"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        app:leftValue="当前已选择画质" />

    <com.leon.biuvideo.ui.views.LoadingRecyclerView
        android:id="@+id/download_bottom_sheet_dialog_anthology_data"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="20dp" />

</LinearLayout>