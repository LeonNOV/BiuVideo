<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bottom_sheet_background"
    android:orientation="vertical"
    android:paddingStart="20dp"
    android:paddingEnd="20dp"
    android:paddingBottom="20dp">

    <com.leon.biuvideo.ui.views.BottomSheetTopBar
        android:id="@+id/set_recommend_column_topBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:bottomSheetTitle="@string/setting_recommend_span_count" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <FrameLayout
            android:id="@+id/set_recommend_column_showSingleColumn"
            android:layout_width="match_parent"
            android:layout_height="75dp"
            android:background="@drawable/ripple_round_corners6dp_no_padding_bg"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="64dp"
                android:layout_height="64dp"
                android:layout_gravity="start|center_vertical"
                android:layout_marginStart="20dp"
                android:contentDescription="@string/description"
                android:src="@drawable/ic_single_column"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="end|center_vertical"
                android:layout_marginEnd="20dp"
                android:text="@string/singleColumn"
                android:textColor="@color/black"
                android:textSize="17sp"
                android:textStyle="bold" />

        </FrameLayout>

        <FrameLayout
            android:id="@+id/set_recommend_column_showDoubleColumn"
            android:layout_width="match_parent"
            android:layout_height="75dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/ic_selected">

            <ImageView
                android:layout_width="64dp"
                android:layout_height="64dp"
                android:layout_gravity="start|center_vertical"
                android:layout_marginStart="20dp"
                android:contentDescription="@string/description"
                android:src="@drawable/ic_double_column"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:layout_marginStart="35dp"
                android:layout_gravity="end|center_vertical"
                android:layout_marginEnd="20dp"
                android:text="@string/doubleColumn"
                android:textColor="@color/black"
                android:textSize="17sp"
                android:textStyle="bold" />

        </FrameLayout>

    </LinearLayout>

</LinearLayout>