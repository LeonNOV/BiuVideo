<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="@dimen/itemMarginBottom"
    android:background="@drawable/ripple_round_corners6dp_bg"
    android:orientation="horizontal"
    android:padding="@dimen/itemPadding">

    <androidx.cardview.widget.CardView
        android:layout_width="@dimen/videoCoverWidth"
        android:layout_height="@dimen/videoCoverHeight"
        app:cardCornerRadius="@dimen/corner_6dp">

        <ImageView
            android:id="@+id/favorite_video_imageView_cover"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"
            android:src="@drawable/ic_launcher_background" />

        <TextView
            android:id="@+id/favorite_video_textView_duration"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|start"
            android:layout_margin="6dp"
            android:background="@drawable/video_length_bg"
            android:gravity="center"
            android:padding="3dp"
            android:textColor="@color/white"
            android:textSize="13sp"
            tools:text="06:12" />

    </androidx.cardview.widget.CardView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="5dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/favorite_video_textView_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:maxLines="2"
            android:textColor="@color/black"
            android:textSize="14sp"
            tools:text="TitleTitleTitleTitleTitleTitleTitle" />

        <TextView
            android:id="@+id/favorite_video_textView_ftime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/gray"
            android:textSize="12sp"
            tools:text="收藏于2020/12/24 20:20" />

    </LinearLayout>

</LinearLayout>