<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/video_detail_container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingStart="10dp"
    android:paddingTop="10dp"
    android:paddingEnd="10dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/video_detail_face"
            android:layout_width="@dimen/BiliUserFaceWH"
            android:layout_height="@dimen/BiliUserFaceWH"
            android:src="@color/gray"
            app:civ_border_color="@color/black"
            app:civ_border_width="1dp" />

        <TextView
            android:id="@+id/video_detail_userName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginStart="10dp"
            android:layout_toEndOf="@id/video_detail_face"
            android:text="UserName"
            android:textColor="@color/black"
            android:textSize="17sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/video_detail_follow"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:background="@drawable/bili_user_follow_status"
            android:drawablePadding="10dp"
            android:gravity="center_vertical"
            android:padding="10dp"
            android:text="@string/follow"
            android:textColor="@color/white"
            android:textSize="12sp"
            app:drawableStartCompat="@drawable/video_follow_status" />

    </RelativeLayout>

    <TextView
        android:id="@+id/video_detail_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="TitleTitleTitleTitleTitleTitleTitleTitleTitleTitleTitleTitleTitleTitleTitleTitleTitleTitleTitle"
        android:textColor="@color/black"
        android:textSize="16sp" />

    <com.ms.square.android.expandabletextview.ExpandableTextView xmlns:expandableTextView="http://schemas.android.com/apk/res-auto"
        android:id="@+id/video_detail_desc"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        expandableTextView:animDuration="200"
        expandableTextView:maxCollapsedLines="2">

        <TextView
            android:id="@id/expandable_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/infoColor"
            android:textSize="16sp" />

        <ImageButton
            android:id="@id/expand_collapse"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right|bottom"
            android:background="@android:color/transparent"
            android:padding="16dp" />
    </com.ms.square.android.expandabletextview.ExpandableTextView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/video_detail_play"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="10dp"
            android:drawablePadding="3dp"
            android:gravity="center"
            android:text="16.1ä¸‡"
            android:textColor="@color/infoColor"
            android:textSize="13sp"
            app:drawableStartCompat="@drawable/ic_video_play" />

        <TextView
            android:id="@+id/video_detail_danmaku"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="10dp"
            android:drawablePadding="3dp"
            android:gravity="center"
            android:text="556"
            android:textColor="@color/infoColor"
            android:textSize="13sp"
            app:drawableStartCompat="@drawable/ic_danmaku" />

        <TextView
            android:id="@+id/video_detail_pubTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="10dp"
            android:drawablePadding="3dp"
            android:gravity="center"
            android:text="2021/04/06"
            android:textColor="@color/infoColor"
            android:textSize="13sp"
            app:drawableStartCompat="@drawable/ic_view_time" />

        <TextView
            android:id="@+id/video_detail_bvid"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="BV1E2S4D7F7F"
            android:textColor="@color/infoColor"
            android:textSize="13sp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/video_detail_like"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/ripple_round_corners6dp_bg"
            android:drawablePadding="5dp"
            android:gravity="center"
            android:text="2395"
            android:textColor="@color/infoColor"
            android:textSize="15sp"
            app:drawableTopCompat="@drawable/ic_like_status" />

        <TextView
            android:id="@+id/video_detail_coin"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/ripple_round_corners6dp_bg"
            android:drawablePadding="5dp"
            android:gravity="center"
            android:text="2395"
            android:textColor="@color/infoColor"
            android:textSize="15sp"
            app:drawableTopCompat="@drawable/ic_coin_status" />

        <TextView
            android:id="@+id/video_detail_favorite"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/ripple_round_corners6dp_bg"
            android:drawablePadding="5dp"
            android:gravity="center"
            android:text="2395"
            android:textColor="@color/infoColor"
            android:textSize="15sp"
            app:drawableTopCompat="@drawable/ic_favorite_status" />

        <TextView
            android:id="@+id/video_detail_share"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/ripple_round_corners6dp_bg"
            android:drawablePadding="5dp"
            android:gravity="center"
            android:text="2395"
            android:textColor="@color/infoColor"
            android:textSize="15sp"
            app:drawableTopCompat="@drawable/ic_share" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/video_detail_anthology_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:background="@drawable/ripple_round_corners6dp_bg"
        android:orientation="horizontal"
        android:padding="@dimen/padding_10dp">

        <com.leon.biuvideo.ui.views.TagView
            android:id="@+id/video_detail_now_anthology"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            app:leftValue="@string/videoNowPlay" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:layout_marginStart="20dp"
            android:text="@string/videoClickChangeAnthology"
            android:textColor="@color/infoColor"
            android:textSize="12sp" />

    </LinearLayout>

    <!--    <com.leon.biuvideo.ui.views.LoadingRecyclerView-->
    <!--        android:id="@+id/video_detail_videoEps"-->
    <!--        android:layout_width="match_parent"-->
    <!--        android:layout_height="wrap_content"-->
    <!--        android:layout_marginTop="20dp"-->
    <!--        android:padding="@dimen/recyclerViewPadding"-->
    <!--        android:visibility="visible" />-->

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/video_detail_tags"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:orientation="horizontal"
        android:overScrollMode="never"
        android:padding="@dimen/recyclerViewPadding"
        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager" />

    <com.leon.biuvideo.ui.views.LoadingRecyclerView
        android:id="@+id/video_detail_recommends"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="20dp"
        android:padding="@dimen/recyclerViewPadding" />

</LinearLayout>