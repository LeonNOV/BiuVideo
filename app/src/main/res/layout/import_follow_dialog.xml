<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    app:cardBackgroundColor="#fff"
    app:cardCornerRadius="@dimen/corner_6dp">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:gravity="center"
        android:orientation="vertical">

        <EditText
            android:id="@+id/import_follow_editText"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:layout_margin="20dp"
            android:gravity="center"
            android:hint="@string/import_follow_editText_hint"
            android:inputType="number"
            android:textColor="@color/black"
            android:textSize="15sp"
            android:theme="@style/CustomEditText" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:layout_marginBottom="10dp"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="@string/import_follow_advanced"
                android:textSize="12sp"
                android:textColor="@color/black"
                android:textStyle="bold" />

            <ImageView
                android:id="@+id/import_follow_imageView_expansion"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_marginStart="10dp"
                android:background="@drawable/ripple_round_white_bg"
                android:padding="5dp"
                android:src="@drawable/icon_back"
                app:tint="@color/bilibili_pink" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/import_follow_linearLayout_cookie"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:orientation="vertical"
            android:visibility="gone">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:gravity="center"
                android:text="@string/import_follow_advanced_sign" />

            <EditText
                android:id="@+id/import_follow_editText_cookie"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/round_feed_back_bg"
                android:ems="17"
                android:gravity="start|top"
                android:hint="@string/import_follow_editText_cookie_hint"
                android:inputType="textMultiLine"
                android:maxLines="10"
                android:minLines="10"
                android:padding="10dp"
                android:scrollbars="vertical"
                android:textSize="18sp"
                android:theme="@style/CustomEditText" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:id="@+id/import_follow_button_cancel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="?android:attr/borderlessButtonStyle"
                android:layout_margin="10dp"
                android:background="@drawable/ripple_rectangle_bilibbili_pink_lite"
                android:text="@string/cancel" />

            <Button
                android:id="@+id/import_follow_button_confirm"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:background="@drawable/ripple_rectangle_bilibbili_pink_lite"
                android:text="@string/confirm" />

        </LinearLayout>

    </LinearLayout>

</androidx.cardview.widget.CardView>