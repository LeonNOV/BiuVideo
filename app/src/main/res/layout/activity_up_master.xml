<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F6AAC0"
    android:gravity="center"
    android:orientation="vertical"
    tools:context=".ui.activitys.UpMasterActivity">

    <ImageView
        android:id="@+id/up_imageView_cover"
        android:layout_width="match_parent"
        android:layout_height="130dp"
        android:scaleType="fitXY"
        android:src="@drawable/ic_launcher_background"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <de.hdodenhof.circleimageview.CircleImageView
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:id="@+id/up_circleImageView_face"
            android:layout_width="64dp"
            android:layout_height="64dp"
            android:layout_margin="5dp"
            android:src="@drawable/ic_launcher_background"
            app:civ_border_color="#FF000000"
            app:civ_border_width="2dp"/>

        <TextView
            android:id="@+id/up_textView_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="15dp"
            android:text="我是name"
            android:textColor="@color/bilibilib_pink"
            android:textSize="30sp"
            android:textStyle="bold"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="80dp"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/up_imageView_favoriteIconState"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@color/noneColor"
                android:src="@drawable/no_favorite"/>

            <TextView
                android:id="@+id/up_textView_favoriteStrState"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="未关注"/>

        </LinearLayout>

    </LinearLayout>

    <com.ms.square.android.expandabletextview.ExpandableTextView
        xmlns:expandableTextView="http://schemas.android.com/apk/res-auto"
        android:id="@+id/up_textView_sign"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        expandableTextView:animDuration="200"
        expandableTextView:maxCollapsedLines="2">

        <TextView
            android:id="@id/expandable_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:textColor="#666666"
            android:textSize="12sp"/>

        <ImageButton
            android:id="@id/expand_collapse"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right|bottom"
            android:background="@android:color/transparent"
            android:padding="10dp"/>
    </com.ms.square.android.expandabletextview.ExpandableTextView>

    <!--<LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/up_textView_follower"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="336万粉丝" />

        <TextView
            android:id="@+id/up_textView_like"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="30dp"
            android:text="133.4万获赞" />

        <TextView
            android:id="@+id/up_textView_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="30dp"
            android:text="2703万播放" />

    </LinearLayout>-->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:gravity="center"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/up_textView_item1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="item1"
            android:textColor="@color/normal"
            android:textSize="30dp"/>

        <TextView
            android:id="@+id/up_textView_item2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="50dp"
            android:text="item2"
            android:textColor="@color/normal"
            android:textSize="30dp"/>

        <TextView
            android:id="@+id/up_textView_item3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="50dp"
            android:text="item3"
            android:textColor="@color/normal"
            android:textSize="30dp"/>
    </LinearLayout>

    <androidx.viewpager.widget.ViewPager
        android:id="@+id/up_viewPage"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

</LinearLayout>