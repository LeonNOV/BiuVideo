<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/title_container"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/video_player_title_video_bg"
    android:gravity="center_vertical"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/video_player_title_view_back"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:contentDescription="@string/description"
        android:padding="10dp"
        android:src="@drawable/ic_back"
        app:tint="@color/white" />

    <LinearLayout
        android:id="@+id/video_player_title_content"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/video_player_title_view_title"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:ellipsize="marquee"
            android:marqueeRepeatLimit="marquee_forever"
            android:paddingLeft="6dp"
            android:paddingRight="6dp"
            android:singleLine="true"
            android:textColor="@color/white"
            android:textSize="16sp"
            tools:text="这是一个标题" />

        <ImageView
            android:id="@+id/video_player_title_view_battery"
            android:layout_width="26dp"
            android:layout_height="20dp"
            android:src="@drawable/dkplayer_battery_level"
            android:contentDescription="@string/description" />

        <TextView
            android:id="@+id/video_player_title_view_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="14dp"
            android:textColor="@android:color/white"
            tools:text="12:00" />

    </LinearLayout>

</LinearLayout>