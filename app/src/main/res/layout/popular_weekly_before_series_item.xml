<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center_horizontal"
    android:layout_marginBottom="@dimen/itemMarginBottom"
    android:layout_marginStart="@dimen/cardMargin"
    android:layout_marginEnd="@dimen/cardMargin"
    android:orientation="vertical"
    android:padding="15dp">

    <TextView
        android:id="@+id/popular_weekly_before_series_item_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:textColor="@color/black"
        android:textSize="13sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/popular_weekly_before_series_item_subject"
        android:layout_width="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_height="wrap_content"
        android:textColor="@color/gray"
        android:textSize="13sp" />

</LinearLayout>