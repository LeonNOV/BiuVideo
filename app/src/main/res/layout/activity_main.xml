<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F48FAC">

    <ImageButton
        android:id="@+id/biu_button_menu"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:background="@color/noneColor"
        android:src="@drawable/main_menu" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:gravity="center"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/hero_imageView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:src="@mipmap/marvel_ironman" />

        <EditText
            android:id="@+id/main_editText_value"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="100dp"
            android:ems="10"
            android:gravity="center"
            android:hint="@string/main_editText_hint"
            android:inputType="text"
            android:theme="@style/CustomEditText" />

        <Button
            android:id="@+id/main_button_confirm"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="35dp"
            android:background="@drawable/button_shape"
            android:text="@string/main_button_start" />

    </LinearLayout>

</RelativeLayout>