<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/BiliBili_pink_lite"
    android:orientation="vertical"
    tools:context=".ui.activitys.SearchResultActivity">

    <com.google.android.material.appbar.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/BiliBili_pink_lite">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/topBar_height"
            android:background="@color/BiliBili_pink"
            app:layout_scrollFlags="scroll|enterAlways">

            <ImageView
                android:id="@+id/search_imageView_back"
                android:layout_width="@dimen/small_view_w_h"
                android:layout_height="@dimen/small_view_w_h"
                android:layout_marginTop="5dp"
                android:background="@drawable/ripple_round_bilibili_pink_bg"
                android:padding="@dimen/small_view_padding_10dp"
                android:src="@drawable/icon_back" />

            <RelativeLayout
                android:layout_width="270dp"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:layout_marginTop="4dp"
                android:background="@drawable/round_bilibili_lite_bg"
                android:orientation="horizontal"
                android:paddingTop="7dp"
                android:paddingBottom="7dp">

                <EditText
                    android:id="@+id/search_editText_searchBox"
                    android:layout_width="210dp"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="13dp"
                    android:layout_marginEnd="9dp"
                    android:background="@null"
                    android:hint="@string/search_result_hint"
                    android:imeOptions="actionSearch"
                    android:inputType="text"
                    android:maxLines="1"
                    android:textSize="15sp"
                    android:theme="@style/CustomEditText" />

                <ImageView
                    android:id="@+id/search_imageView_clean"
                    android:layout_width="27dp"
                    android:layout_height="27dp"
                    android:layout_centerVertical="true"
                    android:layout_toEndOf="@id/search_editText_searchBox"
                    android:background="@drawable/ripple_round_bilibili_pink_lite"
                    android:padding="5dp"
                    android:src="@drawable/icon_delete" />

            </RelativeLayout>

        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/search_textView_result_video"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"
                android:layout_weight="1"
                android:background="@drawable/lndicator_bar_selected"
                android:gravity="center"
                android:text="@string/video"
                android:textColor="@color/black"
                android:textSize="18sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/search_textView_result_bangumi"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"
                android:layout_weight="1"
                android:background="@drawable/lndicator_bar_unselected"
                android:gravity="center"
                android:text="@string/bangumi"
                android:textColor="@color/black"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/search_textView_result_article"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"
                android:layout_weight="1"
                android:background="@drawable/lndicator_bar_unselected"
                android:gravity="center"
                android:text="@string/article"
                android:textColor="@color/black"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/search_textView_result_user"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"
                android:layout_weight="1"
                android:background="@drawable/lndicator_bar_unselected"
                android:gravity="center"
                android:text="@string/biliUser"
                android:textColor="@color/black"
                android:textSize="15sp" />

        </LinearLayout>

    </com.google.android.material.appbar.AppBarLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">

        <androidx.viewpager.widget.ViewPager
            android:id="@+id/search_viewPager"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

    </RelativeLayout>

</androidx.coordinatorlayout.widget.CoordinatorLayout>