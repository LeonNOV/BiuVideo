<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bilibili_pink_lite"
    android:orientation="vertical"
    tools:context=".ui.activitys.SearchResultActivity">

    <androidx.appcompat.widget.Toolbar
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/bilibili_pink">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/search_imageView_back"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginTop="5dp"
                android:background="?selectableItemBackgroundBorderless"
                android:padding="5dp"
                android:src="@drawable/icon_back"
                app:tint="#707070" />

            <androidx.cardview.widget.CardView
                android:layout_width="250dp"
                android:layout_height="33dp"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="3dp"
                android:outlineSpotShadowColor="@android:color/transparent"
                android:padding="20dp"
                app:cardBackgroundColor="@color/bilibili_pink_lite"
                app:cardCornerRadius="15dp">

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:orientation="horizontal">

                    <EditText
                        android:id="@+id/search_editText_searchBox"
                        android:layout_width="200dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="13dp"
                        android:layout_marginEnd="9dp"
                        android:background="@null"
                        android:layout_centerVertical="true"
                        android:hint="输入关键字，进行搜索"
                        android:imeOptions="actionSearch"
                        android:inputType="text"
                        android:maxLines="1"
                        android:textSize="15sp"
                        android:theme="@style/CustomEditText" />

                    <ImageView
                        android:id="@+id/search_imageView_clean"
                        android:layout_width="23dp"
                        android:layout_height="23dp"
                        android:layout_centerVertical="true"
                        android:layout_toEndOf="@id/search_editText_searchBox"
                        android:background="?selectableItemBackgroundBorderless"
                        android:padding="5dp"
                        android:src="@drawable/icon_delete" />

                </RelativeLayout>

            </androidx.cardview.widget.CardView>

        </RelativeLayout>

    </androidx.appcompat.widget.Toolbar>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/search_textView_result_video"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:layout_weight="1"
            android:background="@drawable/shape_bilibili_pink"
            android:gravity="center"
            android:padding="7dp"
            android:text="视频"
            android:textSize="17sp" />

        <TextView
            android:id="@+id/search_textView_result_article"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:layout_weight="1"
            android:background="@drawable/ripple_bilibili_pink_lite"
            android:gravity="center"
            android:padding="7dp"
            android:text="专栏"
            android:textSize="17sp" />

        <TextView
            android:id="@+id/search_textView_result_user"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:layout_weight="1"
            android:background="@drawable/ripple_bilibili_pink_lite"
            android:gravity="center"
            android:padding="7dp"
            android:text="用户"
            android:textSize="17sp" />

    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <androidx.viewpager.widget.ViewPager
            android:id="@+id/search_viewPager"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <ProgressBar
            android:id="@+id/search_progressBar"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_centerInParent="true"
            android:indeterminateTint="@color/colorPrimary"
            android:visibility="invisible"
            android:indeterminateTintMode="src_atop" />

    </RelativeLayout>

</LinearLayout>