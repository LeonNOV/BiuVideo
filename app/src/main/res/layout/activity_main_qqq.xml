<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F48FAC"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/topBar_height"
        android:background="@color/BiliBili_pink">

        <ImageView
            android:id="@+id/toolBar_imageView_menu"
            android:layout_width="@dimen/small_view_w_h"
            android:layout_height="@dimen/small_view_w_h"
            android:layout_centerVertical="true"
            android:layout_marginStart="10dp"
            android:padding="@dimen/small_view_padding_10dp"
            android:background="@drawable/ripple_round_bilibili_pink_bg"
            android:src="@drawable/main_menu"
            app:tint="#FF515151" />

    </RelativeLayout>

    <!-- 使用侧滑栏切换fragment的话一定要指定navGraph -->
    <fragment
        android:id="@+id/main_fragment"
        android:name="androidx.navigation.fragment.NavHostFragment"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:defaultNavHost="true"
        app:navGraph="@navigation/main_navigation" />

</LinearLayout>