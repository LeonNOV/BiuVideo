<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="#fff"
    android:layout_height="match_parent"
    android:id="@+id/article_relativeLayout"
    tools:context=".ui.activitys.ArticleActivity">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/article_toolBar"
        android:background="@color/bilibili_pink"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/article_imageView_back"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_centerVertical="true"
                android:src="@drawable/icon_back"
                app:tint="#E3E3E3" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="50dp"
                android:layout_marginEnd="50dp"
                android:text="Titawasfjksdhfksdfhsdkfhsdkfjshfksdhfksdfhsdkfle"
                android:textColor="#E3E3E3"
                android:maxLines="1"
                android:ellipsize="end"
                android:layout_centerVertical="true"
                android:textSize="18sp" />

        </RelativeLayout>

    </androidx.appcompat.widget.Toolbar>

    <WebView
        android:id="@+id/article_webView"
        android:layout_marginTop="10dp"
        android:layout_below="@id/article_toolBar"
        android:layout_width="match_parent"
        android:background="#fff"
        android:layout_height="wrap_content" />

</RelativeLayout>