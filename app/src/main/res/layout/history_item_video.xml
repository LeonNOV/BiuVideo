<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="10dp"
    android:background="@drawable/ripple_round_corners6dp_bg"
    android:orientation="horizontal"
    android:paddingStart="10dp"
    android:paddingEnd="10dp">

    <androidx.cardview.widget.CardView
        android:layout_width="126dp"
        android:layout_height="96dp"
        app:cardCornerRadius="6dp"
        app:cardElevation="0dp">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/history_item_video_cover"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:contentDescription="@string/description"
                android:scaleType="centerCrop"
                android:src="@drawable/ic_launcher_background" />

            <TextView
                android:id="@+id/history_item_video_duration"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom|start"
                android:layout_margin="6dp"
                android:background="@drawable/round_corners6dp_bg"
                android:backgroundTint="#99000000"
                android:gravity="center"
                android:padding="3dp"
                android:text="02:49"
                android:textColor="@color/white"
                android:textSize="13sp" />

            <TextView
                android:id="@+id/history_item_video_badge"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="end"
                android:padding="3dp"
                android:layout_margin="6dp"
                android:text="awdawdaw"
                android:textColor="@color/white"
                android:background="@drawable/round_corners6dp_bg"
                android:backgroundTint="@color/BiliBili_pink"/>

        </FrameLayout>

    </androidx.cardview.widget.CardView>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginStart="10dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/history_item_video_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="top"
            android:ellipsize="end"
            android:maxLines="2"
            android:text="介绍介绍介绍介介绍介绍绍介绍介绍介绍介绍介绍介绍介绍介绍介绍介绍介绍介介绍介绍绍介绍介绍介绍介绍介绍介绍介绍介绍"
            android:textColor="@color/black"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/history_item_video_progress"
            android:layout_width="wrap_content"
            android:layout_above="@id/history_item_video_stat"
            android:text="已观看 %50"
            android:textSize="12sp"
            android:textColor="@color/black"
            android:layout_height="wrap_content"/>

        <LinearLayout
            android:id="@+id/history_item_video_stat"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginTop="5dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/history_item_video_biliUser"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawablePadding="5dp"
                android:layout_gravity="center_vertical"
                android:text="WWWW"
                android:textColor="@color/black"
                android:textSize="12sp"
                app:drawableStartCompat="@drawable/ic_up_user"
                app:drawableTint="@color/black" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/history_item_video_platform"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:src="@drawable/history_platform_photo"
                    android:contentDescription="@string/description" />

                <TextView
                    android:id="@+id/history_item_video_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="5dp"
                    android:layout_gravity="center_vertical"
                    android:text="03/28 14:22"
                    android:textColor="@color/black"
                    android:textSize="12sp"
                    app:drawableTint="@color/black" />

            </LinearLayout>

        </LinearLayout>

    </RelativeLayout>

</LinearLayout>