<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/head_view"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <com.leon.biuvideo.ui.views.HeadZoomScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ImageView
                    android:id="@+id/user_banner"
                    android:layout_width="match_parent"
                    android:layout_height="170dp"
                    android:contentDescription="@string/description"
                    android:scaleType="centerCrop"
                    android:src="@drawable/user_default_banner" />

                <FrameLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom|center_horizontal">

                    <de.hdodenhof.circleimageview.CircleImageView
                        android:id="@+id/user_face"
                        android:layout_width="86dp"
                        android:layout_height="86dp"
                        android:src="@drawable/icon_no_login"
                        app:civ_border_color="@color/gray"
                        app:civ_border_width="1dp"
                        app:civ_circle_background_color="@color/BiliBili_pink" />

                    <ImageView
                        android:id="@+id/user_vip_mark"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="bottom|end"
                        android:contentDescription="@string/description"
                        android:src="@drawable/ic_vip_mark"
                        android:visibility="gone" />

                </FrameLayout>

            </FrameLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/bottom_sheet_background"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="20dp"
                    android:background="@drawable/round_corners6dp_bg"
                    android:orientation="vertical"
                    android:paddingTop="10dp"
                    android:paddingBottom="10dp">

                    <TextView
                        android:id="@+id/user_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:text="@string/no_login"
                        android:textColor="@color/black"
                        android:textSize="20sp"
                        android:textStyle="bold" />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginTop="10dp"
                        android:orientation="horizontal">

                        <com.leon.biuvideo.ui.views.TagView
                            android:id="@+id/user_dynamic_tagView"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            app:isClick="true"
                            app:leftValue="0"
                            app:rightValue="@string/user_dynamic"
                            app:tagMark="right" />

                        <com.leon.biuvideo.ui.views.TagView
                            android:id="@+id/user_fav_tagView"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="20dp"
                            android:layout_marginEnd="20dp"
                            app:isClick="true"
                            app:leftValue="0"
                            app:rightValue="@string/user_follow"
                            app:tagMark="right" />

                        <com.leon.biuvideo.ui.views.TagView
                            android:id="@+id/user_fans_tagView"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            app:isClick="true"
                            app:leftValue="0"
                            app:rightValue="@string/user_fans"
                            app:tagMark="right" />

                    </LinearLayout>

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/user_baseInfo_linearLayout"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginStart="20dp"
                    android:layout_marginEnd="20dp"
                    android:layout_marginBottom="20dp"
                    android:background="@drawable/round_corners6dp_bg"
                    android:orientation="vertical"
                    android:padding="20dp"
                    android:visibility="gone">

                    <com.leon.biuvideo.ui.views.CardTitle
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:card_title="基本信息" />

                    <com.leon.biuvideo.ui.views.TagView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:leftValue="@string/user_uid"
                        app:rightValue="12345678"
                        app:tagMark="none" />

                    <com.leon.biuvideo.ui.views.TagView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        app:isClick="false"
                        app:leftValue="@string/user_name"
                        app:rightValue="Leon"
                        app:tagMark="none" />

                    <com.leon.biuvideo.ui.views.TagView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        app:isClick="false"
                        app:leftValue="@string/user_sex"
                        app:rightValue="男"
                        app:tagMark="none" />

                    <com.leon.biuvideo.ui.views.TagView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        app:isClick="false"
                        app:leftValue="@string/user_level"
                        app:rightValue="Lv4"
                        app:tagMark="none" />

                    <TextView
                        android:id="@+id/user_info"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginTop="10dp"
                        android:background="@drawable/ripple_round_corners6dp_bg"
                        android:text="@string/checkAll"
                        android:textColor="@color/gray" />

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/user_accountInfo_linearLayout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginStart="20dp"
                    android:layout_marginEnd="20dp"
                    android:layout_marginBottom="20dp"
                    android:background="@drawable/round_corners6dp_bg"
                    android:orientation="vertical"
                    android:padding="20dp"
                    android:visibility="gone">

                    <com.leon.biuvideo.ui.views.CardTitle
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:card_title="@string/user_accountInfo" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:orientation="vertical">

                        <FrameLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="start"
                                android:text="Lv.4"
                                android:textColor="@color/black"
                                android:textSize="15sp" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="end"
                                android:text="8303/10800"
                                android:textColor="@color/black"
                                android:textSize="15sp" />

                        </FrameLayout>

                        <ProgressBar
                            style="@style/Widget.AppCompat.ProgressBar.Horizontal"
                            android:layout_width="match_parent"
                            android:layout_height="5dp"
                            android:layout_marginTop="5dp"
                            android:max="10800"
                            android:progress="8303"
                            android:progressDrawable="@drawable/user_level_progress_layer" />

                    </LinearLayout>

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp">

                        <TextView
                            android:id="@+id/user_coin"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:drawablePadding="10dp"
                            android:text="651.0"
                            android:textColor="@color/black"
                            android:textSize="15sp"
                            app:drawableStartCompat="@drawable/ic_coin1" />

                        <TextView
                            android:id="@+id/user_b_coin"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_marginStart="30dp"
                            android:layout_toEndOf="@id/user_coin"
                            android:drawablePadding="10dp"
                            android:text="2.0"
                            android:textColor="@color/black"
                            android:textSize="15sp"
                            app:drawableStartCompat="@drawable/ic_coin2" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentEnd="true"
                            android:background="@drawable/round_corners6dp_bg"
                            android:backgroundTint="#fb7299"
                            android:padding="5dp"
                            android:text="@string/vip"
                            android:textColor="@color/white"
                            android:textStyle="bold" />

                    </RelativeLayout>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginTop="10dp"
                        android:text="大会员有效期至2021-03-12"
                        android:textColor="@color/gray"
                        android:textSize="14sp" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginStart="20dp"
                    android:layout_marginEnd="20dp"
                    android:layout_marginBottom="20dp"
                    android:background="@drawable/round_corners6dp_bg"
                    android:orientation="vertical"
                    android:padding="20dp">

                    <com.leon.biuvideo.ui.views.CardTitle
                        android:id="@+id/user_favorite_cardTitle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:card_action="@string/checkMore"
                        app:card_title="@string/favorite" />

                    <ImageView
                        android:id="@+id/user_favorite_noData"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:contentDescription="@string/description"
                        android:src="@drawable/ic_no_data" />

                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/user_favorite_recyclerView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:visibility="gone"
                        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                        tools:itemCount="2" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginStart="20dp"
                    android:layout_marginEnd="20dp"
                    android:layout_marginBottom="20dp"
                    android:background="@drawable/round_corners6dp_bg"
                    android:orientation="vertical"
                    android:padding="20dp">

                    <com.leon.biuvideo.ui.views.CardTitle
                        android:id="@+id/user_bangumi_cardTitle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:card_action="@string/checkMore"
                        app:card_title="@string/bangumi" />

                    <ImageView
                        android:id="@+id/user_bangumi_noData"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:contentDescription="@string/description"
                        android:src="@drawable/ic_no_data" />

                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/user_bangumi_recyclerView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:visibility="gone"
                        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                        tools:itemCount="3" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginStart="20dp"
                    android:layout_marginEnd="20dp"
                    android:layout_marginBottom="20dp"
                    android:background="@drawable/round_corners6dp_bg"
                    android:orientation="vertical"
                    android:padding="20dp">

                    <com.leon.biuvideo.ui.views.CardTitle
                        android:id="@+id/user_coin_cardTitle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:card_action="@string/checkMore"
                        app:card_title="@string/user_coin" />

                    <ImageView
                        android:id="@+id/user_coin_noData"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:contentDescription="@string/description"
                        android:src="@drawable/ic_no_data" />

                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/user_coin_recyclerView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:visibility="gone"
                        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                        tools:itemCount="2" />

                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

    </com.leon.biuvideo.ui.views.HeadZoomScrollView>

</LinearLayout>