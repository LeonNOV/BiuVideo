<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardUseCompatPadding="true"
    app:cardCornerRadius="@dimen/corner_6dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/item_padding"
        android:background="@drawable/ripple_item_bilibili_lite"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <androidx.cardview.widget.CardView
                android:layout_width="78dp"
                android:layout_height="104dp"
                app:cardCornerRadius="@dimen/corner_6dp">

                <ImageView
                    android:id="@+id/search_result_bangumi_imageView_cover"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="centerCrop"
                    android:src="@drawable/ic_launcher_background" />
            </androidx.cardview.widget.CardView>

            <LinearLayout
                android:layout_width="170dp"
                android:layout_height="104dp"
                android:layout_marginStart="5dp"
                android:layout_marginEnd="5dp"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/search_result_bangumi_textView_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:maxLines="2"
                    android:textStyle="bold"
                    android:text="TitleTitleTitleTitleTitleTitleTitleTitleTitleTitleTitleTitleTitleTitle"
                    android:textColor="@color/black"
                    android:textSize="14sp" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/search_result_bangumi_textView_pubTime"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="2019"
                        android:textColor="@color/gray"
                        android:textSize="12sp" />

                    <View
                        android:layout_width="0.5dp"
                        android:layout_height="match_parent"
                        android:layout_marginStart="@dimen/small_view_padding_10dp"
                        android:layout_marginEnd="@dimen/small_view_padding_10dp"
                        android:background="@color/gray" />

                    <TextView
                        android:id="@+id/search_result_bangumi_textView_area"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="日本"
                        android:textColor="@color/gray"
                        android:textSize="12sp" />

                </LinearLayout>

                <TextView
                    android:id="@+id/search_result_bangumi_textView_style"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:maxLines="1"
                    android:text="小说改/穿越/架空/科幻/冒险/战斗"
                    android:textColor="@color/gray"
                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/search_result_bangumi_textView_angleTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="3dp"
                    android:background="@drawable/round_bilibili_pink_bg"
                    android:paddingStart="7dp"
                    android:paddingTop="3dp"
                    android:paddingEnd="7dp"
                    android:paddingBottom="3dp"
                    android:text="会员专享"
                    android:textColor="@color/white"
                    android:textSize="12sp" />


            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:layout_gravity="center_vertical"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/search_result_bangumi_textView_score"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="9.1"
                        android:textStyle="bold"
                        android:textColor="@color/blue"
                        android:textSize="25sp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/bangumi_score"
                        android:textColor="@color/blue"
                        android:textSize="13sp" />

                </LinearLayout>

                <TextView
                    android:id="@+id/search_result_bangumi_textView_reviewNum"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="5.2万人点评"
                    android:textSize="10sp"
                    android:textColor="@color/black" />

            </LinearLayout>

        </LinearLayout>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/search_result_bangumi_recyclerView_eps"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:orientation="horizontal"
            app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager" />

    </LinearLayout>

</androidx.cardview.widget.CardView>
