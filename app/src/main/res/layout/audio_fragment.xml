<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/audio_linearLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <com.leon.biuvideo.ui.views.SimpleTopBar
        android:id="@+id/audio_topBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:paddingStart="10dp"
        android:paddingEnd="10dp">

        <TextView
            android:id="@+id/audio_audioName"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"
            android:textColor="@color/black"
            android:textSize="17sp"
            android:textStyle="bold" />

        <!--        <TextView-->
        <!--            android:id="@+id/audio_textView_author"-->
        <!--            android:layout_width="wrap_content"-->
        <!--            android:layout_height="match_parent"-->
        <!--            android:gravity="center"-->
        <!--            android:text="awdwadwad"-->
        <!--            android:textSize="15sp"-->
        <!--            android:textColor="@color/black"-->
        <!--            app:drawableEndCompat="@drawable/ic_enter" />-->

    </LinearLayout>

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/audio_cover"
        android:layout_width="240dp"
        android:layout_height="0dp"
        android:layout_gravity="center"
        android:layout_weight="1"
        android:src="@color/gray"
        app:civ_border_color="#979797"
        app:civ_border_overlay="true"
        app:civ_border_width="2dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="50dp"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="30dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/audio_imageView_addFavorite"
                android:layout_width="45dp"
                android:layout_height="45dp"
                android:layout_weight="1"
                android:background="@drawable/ripple_round_corners6dp_bg"
                android:contentDescription="@string/description"
                android:padding="11dp"
                android:src="@drawable/ic_favorite_status" />

            <ImageView
                android:id="@+id/audio_musicVideo"
                android:layout_width="45dp"
                android:layout_height="45dp"
                android:layout_weight="1"
                android:background="@drawable/ripple_round_corners6dp_bg"
                android:clickable="false"
                android:contentDescription="@string/description"
                android:padding="8dp"
                android:src="@drawable/music_video" />

            <ImageView
                android:id="@+id/audio_link"
                android:layout_width="45dp"
                android:layout_height="45dp"
                android:layout_weight="1"
                android:background="@drawable/ripple_round_corners6dp_bg"
                android:contentDescription="@string/description"
                android:padding="8dp"
                android:src="@drawable/music_link" />

            <ImageView
                android:id="@+id/audio_download"
                android:layout_width="45dp"
                android:layout_height="45dp"
                android:layout_weight="1"
                android:background="@drawable/ripple_round_corners6dp_bg"
                android:contentDescription="@string/description"
                android:padding="8dp"
                android:src="@drawable/music_download" />

        </LinearLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/audio_currentProgress"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/audio_seekBar"
                android:layout_marginStart="30dp"
                android:layout_marginTop="5dp"
                android:text="00:00"
                android:textColor="@color/infoColor" />

            <SeekBar
                android:id="@+id/audio_seekBar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"
                android:maxHeight="3dp"
                android:max="1000"
                android:minHeight="3dp"
                android:progressDrawable="@drawable/music_progress_bar"
                android:thumb="@drawable/dkplayer_seekbar_thumb" />

            <TextView
                android:id="@+id/audio_length"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/audio_seekBar"
                android:layout_alignParentEnd="true"
                android:layout_marginTop="5dp"
                android:layout_marginEnd="30dp"
                android:text="00:00"
                android:textColor="@color/infoColor" />

        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/audio_prev"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginEnd="30dp"
                android:contentDescription="@string/description"
                android:src="@drawable/music_icon_prev" />

            <ImageView
                android:id="@+id/audio_control"
                android:layout_width="55dp"
                android:layout_height="55dp"
                android:contentDescription="@string/description"
                android:src="@drawable/music_play_status" />

            <ImageView
                android:id="@+id/audio_next"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginStart="30dp"
                android:contentDescription="@string/description"
                android:src="@drawable/music_icon_next" />

        </LinearLayout>

    </LinearLayout>

</LinearLayout>