<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="10dp"
    android:background="@drawable/ripple_round_corners6dp_bg"
    android:orientation="vertical">

    <TextView
        android:id="@+id/search_result_item_article_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="top"
        android:ellipsize="end"
        android:maxLines="2"
        android:padding="10dp"
        android:text="TitleTitleTitleTitleTitleTitleTitleTitleTitleTitle"
        android:textColor="@color/black"
        android:textSize="15sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="127dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/search_result_item_article_cover1"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:contentDescription="@string/description"
            android:scaleType="centerCrop"
            android:src="@color/gray" />

        <ImageView
            android:id="@+id/search_result_item_article_cover2"
            android:layout_width="wrap_content"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:layout_marginStart="5dp"
            android:layout_marginEnd="5dp"
            android:contentDescription="@string/description"
            android:scaleType="centerCrop"
            android:src="@color/gray" />

        <ImageView
            android:id="@+id/search_result_item_article_cover3"
            android:layout_width="wrap_content"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:contentDescription="@string/description"
            android:scaleType="centerCrop"
            android:src="@color/gray" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:padding="10dp">

        <TextView
            android:id="@+id/search_result_item_article_userName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:drawablePadding="5dp"
            android:textColor="@color/infoColor"
            android:text="UserName"
            android:textSize="13sp"
            app:drawableStartCompat="@drawable/ic_up_user" />

        <TextView
            android:id="@+id/search_result_item_article_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:drawablePadding="5dp"
            android:layout_marginStart="30dp"
            android:textColor="@color/infoColor"
            android:textSize="13sp"
            android:text="1234"
            app:drawableStartCompat="@drawable/ic_view" />

        <TextView
            android:id="@+id/search_result_item_article_like"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:drawablePadding="5dp"
            android:textColor="@color/infoColor"
            android:textSize="13sp"
            android:layout_marginStart="20dp"
            android:text="1234"
            app:drawableStartCompat="@drawable/ic_like" />

        <TextView
            android:id="@+id/search_result_item_article_comment"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:drawablePadding="5dp"
            android:layout_marginStart="20dp"
            android:textColor="@color/infoColor"
            android:textSize="13sp"
            android:text="1234"
            app:drawableStartCompat="@drawable/ic_comment" />

    </LinearLayout>

</LinearLayout>