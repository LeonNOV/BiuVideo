<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    android:background="@color/bilibilib_pink_lite">

    <ImageView
        android:id="@+id/home_imageView_hero"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:src="@mipmap/marvel_ironman" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="100dp"
        android:gravity="center"
        android:orientation="horizontal">

        <Spinner
            android:id="@+id/home_spinner"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/spinner_theme"
            android:popupBackground="@drawable/spinner_popup_theme"
            android:entries="@array/home_spinner"/>

        <EditText
            android:id="@+id/home_editText_value"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:ems="10"
            android:gravity="center"
            android:hint="@string/main_editText_hint"
            android:inputType="text"
            android:theme="@style/CustomEditText" />
    </LinearLayout>

    <Button
        android:id="@+id/home_button_confirm"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="35dp"
        android:textColor="#FF515151"
        android:background="@drawable/shape_bilibili_pink"
        android:text="@string/main_button_start" />

</LinearLayout>