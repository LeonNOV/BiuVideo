<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="@color/bg"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.leon.biuvideo.ui.views.BottomSheetTopBar
        android:id="@+id/popular_weekly_before_series_bottom_sheet_topBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:bottomSheetTitle="往期每周必看"/>

    <com.leon.biuvideo.ui.views.LoadingRecyclerView
        android:id="@+id/popular_weekly_before_series_bottom_sheet_loadingRecyclerView"
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:padding="@dimen/recyclerViewPadding"
        android:layout_height="match_parent"/>

</LinearLayout>